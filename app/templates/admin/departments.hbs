<div class="row">
  <div class="input-group">
    {{input value=query class="form-control" placeholder=(t 'text.query_department') action='sendQuery'}}
    <span class="input-group-btn">
      <button class="btn btn-default" type="button" {{action 'sendQuery'}}>SÃ¶k</button>
    </span>
  </div>
</div>
<hr/>
<div class="row">
  {{#if model}}
  <table class="table table-valign-middle">
    <thead>
      <tr>
        <th>{{t 'text.department.name_sv'}}</th>
        <th>{{t 'text.department.name_en'}}</th>
        <th>{{t 'text.department.start_year'}}</th>
        <th>{{t 'text.department.end_year'}}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |dep|}}
      <tr>
        <td>{{dep.name_sv}}</td>
        <td>{{dep.name_en}}</td>
        <td>{{dep.start_year}}</td>
        <td>{{dep.end_year}}</td>
        <td>
          <button class="btn btn-default" {{action 'toggleSetEndYear' dep}}>
            {{t 'edit.actions.btnEditEndYear'}}
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
    {{#if qd}}
      <div class="col-xs-12">
        {{t 'text.query_department_none'}}
      </div>
    {{/if}}
  {{/if}}
</div>

<!-- Modal -->
<div class="modal fade" id="setEndYearModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel3">{{t 'text.department.modalHeader'}}</h4>
      </div>
      <div class="modal-body">
        {{#if modalError}}
          <div class="row bottom-spacing-20">
            <div class="col-xs-12">
              <div class="alert alert-danger">
                {{modalError}}
              </div>
            </div>
          </div>
        {{/if}}
        <div class="row bottom-spacing-20">
          <div class="col-xs-12">
          <label>{{t 'text.department.name_sv'}}</label><br/>
          {{current.name_sv}}
          </div>
        </div>
        <div class="row bottom-spacing-20">
          <div class="col-xs-12">
          <label>{{t 'text.department.name_en'}}</label><br/>
          {{current.name_en}}
          </div>
        </div>
        <div class="row bottom-spacing-20">
          <div class="col-xs-12">
          <label>{{t 'text.department.start_year'}}</label><br/>
          {{current.start_year}}
          </div>
        </div>
        <div class="form-group {{if modalInvalidShowInfo 'has-error'}} row bottom-spacing-20">
          <div class="col-xs-12">
            <label class="control-label">{{t 'text.department.end_year'}}
              {{#if modalInvalidShowInfo}}
                <span> - {{modalInvalidShowInfo}}</span>
              {{/if}}
            </label><br/>
          {{input class="form-control" placeholder="YYYY" value=newEndYear}}
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-link" data-dismiss="modal">{{t 'edit.actions.btnCancel'}}</button>
        {{#if current.end_year}}
          <button class="btn btn-primary navbar-btn" {{action 'removeEndYear' current}}>{{t 'edit.actions.btnRemoveEndYear'}}</button>
        {{else}}
          <button class="btn btn-primary navbar-btn disabled">{{t 'edit.actions.btnRemoveEndYear'}}</button>
        {{/if}}
        {{#if modalValid}}
          <button class="btn btn-primary navbar-btn" {{action 'setEndYear' current newEndYear}}>{{t 'edit.actions.btnSave'}}</button>
        {{else}}
          <button class="btn btn-primary navbar-btn disabled">{{t 'edit.actions.btnSave'}}</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>
