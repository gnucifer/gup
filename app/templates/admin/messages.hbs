<div class="row bottom-spacing-20">
  <div class="col-xs-8 col-xs-offset-2">
<h1>{{t 'admin.messages.newsMessageHeader'}}</h1>
    <div class="row bottom-spacing-20">
      <div class="col-xs-12">
      <label class="control-label">{{t 'admin.messages.message'}}</label>
        {{textarea cols=80 rows=6 value=news_message.message class="form-control"}}
      </div>
    </div>

    <div class="row bottom-spacing-20">
      <div class="col-xs-12">
      <label class="control-label">{{t 'admin.messages.start_date'}}</label>
        {{date-picker date=news_message.start_date class="form-control" valueFormat='YYYY-MM-DD' allowBlank='false' firstDay=1 placeholder="YYYY-MM-DD"}}
      </div>
    </div>

    <div class="row bottom-spacing-20">
      <div class="col-xs-12">
      <label class="control-label">{{t 'admin.messages.end_date'}}</label>
        {{date-picker date=news_message.end_date class="form-control" valueFormat='YYYY-MM-DD' allowBlank='false' firstDay=1 placeholder="YYYY-MM-DD"}}
      </div>
    </div>

    <div class="pull-right">
      <button {{action 'deleteMessage' news_message}} class="btn btn-danger">{{t 'admin.messages.delete'}}</button>
      <button {{action 'saveMessage' news_message}} class="btn btn-success">{{t 'admin.messages.save'}}</button>
    </div>
  </div>
</div>
<hr>
