	{{#each item in authorArr}}
		{{author-row item=item setMsgHeader='setMsgHeader' institutions=institutions removeAuthor='removeAuthorRow' isThisTheOnlyAuthorRow=isThisTheOnlyAuthorRow moveUp='moveUp' moveDown='moveDown'}}
	{{/each}}
	<div class="row ">
		<div class="col-md-9">
			<div class="dotted-line"></div>
			<button class="btn btn-primary" {{action 'addNewAuthorRow'}}>{{t 'edit.form.btnAddNewAuthor'}} <i class="fa fa-plus"></i></button>
		</div>
	</div>
</section>