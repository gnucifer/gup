			<div class="row bottom-spacing-20">
				<div class="dotted-line"></div>
				<div class="col-xs-10">
					{{#if item.transformedToNewAuthor}}
						<div class="row bottom-spacing-20">
							<div class="col-xs-12">
								<div class="row bottom-spacing-20">
									<div class="col-xs-6">
										<label>Förnamn:</label>
										{{input id="first-name" type="text" class="form-control" value=item.newAuthorForm.firstName label="Förnamn"}}
									</div>
									<div class="col-xs-6">
										<label>Efternamn:</label>
										{{input type="text" class="form-control" value=item.newAuthorForm.lastName label="Efternamn"}}
									</div>
								</div>
								<div class="row bottom-spacing-20">
									<div class="col-xs-3">
										<label>Födelseår:</label>
										{{input type="text" class="form-control" value=item.newAuthorForm.year_of_birth label="Födelseår (1977)"}}
									</div>

									<div class="col-xs-3">
										<label>x-konto:</label>
										{{input type="text" class="form-control" value=item.newAuthorForm.xaccount label="x-konto (t ex xrasto)"}}
									</div>
									<div class="col-xs-6">
										<label>Orcid:</label>
										{{input type="text" class="form-control" value=item.newAuthorForm.orcid label="Orcid (t ex 0000-0003-5000-0001"}}
									</div>
								</div>
								<div class="btn-toolbar">
									<button type="submit"  {{action 'createAuthor' item}} class="btn btn-success">Spara</button>
									<button {{action "toggleAddNewAuthor" item}}class="btn btn-danger">Avbryt</button>
								</div>
							</div>
						</div>
					{{else}}
						<div class="row">
							<div class="col-xs-5">
								<label>Välj författare</label>
								{{select2-adjusted
								    placeholder="Välj författare"
								    value=item.selectedAuthor
								    optionLabelPath="presentation_string"
								    typeaheadSearchingText="Söker författare"
								   	typeaheadNoMatchesText="Hittade inga författare för '%@'"
								   	minimumInputLength=3
								    query="queryAuthors"
								    allowClear=true
								    zeroResult=item.transformedToNewAuthor
								    cssClass=item.id
								}}
							</div>
							<div class="col-xs-7">
								<div class="how-to-sort">
									<a href="javascript:void();">Sortera?</a>
									<div class="outer-wrapper">
										<div class="message">
										</div>
									</div>
								</div>	
								<label>Välj institutioner</label>
								{{select2-adjusted-sortable
								    content=institutions
								    value=item.selectedInstitution
								    placeholder="Välj institutioner"
								    allowClear=true
								    multiple=true
								}}
							</div>
						</div>
					{{/if}}
				</div>
				<div class="col-xs-1 compensate-for-label-on-top">
					<button {{bind-attr class=":btn :btn-danger isThisTheOnlyAuthorRow:disabled"}} {{action 'remove' item.id}}><i class="fa fa-trash-o"></i></button>
				</div>
				<div class="col-xs-1 compensate-for-label-on-top">
					<div class="sort-control">
						<div class="sort-control-up">
							<a href="javascript:void()" {{action 'moveUp' item.id}}><i class="fa fa-chevron-up"></i></a>
						</div>
						<div class="sort-control-down">
							<a href="javascript:void()" {{action 'moveDown' item.id}}><i class="fa fa-chevron-down"></i></a>
						</div>
					</div>
				</div>

			</div>