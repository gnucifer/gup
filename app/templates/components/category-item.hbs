{{#if category.children}}
  <a href="#" {{bind-attr class=":toggle-icon children.length::leaf"}} {{action 'toggle'}}>
    {{#if isExpanded}}
      <i class="fa fa-folder-open-o"></i>
    {{else}}
      <i class="fa fa-folder-o"></i>
    {{/if}}
  </a>
{{/if}}

{{category.name}}
{{#unless isSelected}}
  <a href="#" {{action 'addSelectedCategory' category.svepid}}><i class="fa fa-plus"></i></a>
{{else}}
  <i class="fa fa-check"></i>
{{/unless}}


{{#if isExpanded}}
  {{#each child in category.children}}
  <div style="padding-left:10px">
    {{category-item category=child categoryList=categoryList}}
  </div>
  {{/each}}
{{/if}}
