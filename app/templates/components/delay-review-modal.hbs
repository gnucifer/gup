<!-- Button-->
<a type="button" {{bind-attr class=buttonClass style=buttonStyle}} data-toggle="modal" data-target="#delayReviewModal">
  {{t 'biblreview.delay'}} <i class="fa fa-clock-o"></i>
</a>

<!-- Modal -->
<div class="modal fade" id="delayReviewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel3">{{t 'biblreview.delayHeader'}}</h4>
      </div>
      <div class="modal-body">
        <div class="input-group">
          <span class="input-group-addon" id="restart-date">{{t 'biblreview.date'}}</span>
          {{date-picker date=date class="form-control" valueFormat='YYYY-MM-DD' allowBlank='false' firstDay=1 placeholder="YYYY-MM-DD"}}
        </div>
        <div class="input-group">
          <span class="input-group-addon" id="restart-comment-text">{{t 'biblreview.comment'}}</span>
          {{textarea value=comment cols=80 rows=6 classNames='form-control'}}
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary navbar-btn" data-dismiss="modal" {{action 'sendDelay'}}>{{t 'biblreview.btnDelay'}}</button>
      </div>
    </div>
  </div>
</div>
