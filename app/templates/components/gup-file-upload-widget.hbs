<button {{action "showUploadModal"}} type="button" class="btn btn-link"><i class="fa fa-paperclip" aria-hidden="true"></i> {{openModalLabel}}</button>
{{#bs-modal open=isShowingUploadModal header=false footer=false closeAction=(action "didCancel")}}
  {{#bs-modal-header}}
    <h4 class="modal-title">{{modalTitle}}</h4>
  {{/bs-modal-header}}
  {{#bs-modal-body}}
    {{#each errors as |error|}}
      <div class="alert alert-danger" role="alert">
        {{error}}
      </div>
    {{/each}}
    {{file-upload
      id=(concat id "-file-upload")
      class="gup-input-upload"
      fileUploadProgress=fileUploadProgress
      fileUploadErrors=errors
      didUploadFile=(action "didUploadFile")
      fileUploadDidErr=(action "fileUploadDidErr")
      fileDidChange=(action "fileDidChange")
      uploadUrl=uploadUrl
      parentResetState=(mut resetFileUploadState)
      uploadExtraData=uploadExtraData}}
    <label for="{{id}}-file-upload"><i class="fa fa-paperclip" aria-hidden="true"></i> {{chooseFileLabelOrFileLabel}}</label>
    {{#if fileUploadProgress }}
      {{#bs-progress}}
        {{bs-progress-bar value=fileUploadProgress minValue=0 maxValue=100 showLabel=false id=(concat id "-progress")}}
      {{/bs-progress}}
    {{/if}}
    {{yield}}
  {{/bs-modal-body}}
  {{!bs-modal-footer closeTitle=abortFileSaveLabel submitTitle=saveFileLabel}}
  {{#bs-modal-footer as |footer|}}
    {{#bs-button action=(action "close" target=footer) type="danger"}}{{abortFileSaveLabel}}{{/bs-button}}
    {{!#bs-button action=(action "saveFile") type="success" disabled=hasAssetData}}{{!saveFileLabel}}{{!/bs-button}}
    <button type="button" class="btn btn-primary" {{action "didSave"}} disabled={{hasNoUploadedFile}}>{{saveFileLabel}}</button>
  {{/bs-modal-footer}}
{{/bs-modal}}
