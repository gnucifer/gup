<!-- Button-->
<button type="button" class={{buttonClass}} data-toggle="modal" data-target="#mailerModal">
  {{t 'mailer.report'}} <i class="fa fa-flag"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="mailerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel3">{{t 'mailer.report'}}</h4>
      </div>
      <div class="modal-body">
        <h4>{{t 'mailer.message'}}</h4>
        {{textarea value=message cols=80 rows=6 classNames='form-control'}}
      </div>
      <div class="modal-footer">
        <button class="btn btn-link" data-dismiss="modal">Avbryt</button>
        <button class="btn btn-primary" data-dismiss="modal" {{action 'sendMail'}}>{{t 'mailer.send'}}</button>
      </div>
    </div>
  </div>
</div>
