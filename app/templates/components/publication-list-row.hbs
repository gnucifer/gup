<div class="publication-list-row">
  <div class="row">
    <div class="col-xs-12">
      <h3>{{#link-to link item.id (query-params other_version=null)}} {{titleString}}{{/link-to}}</h3>
    </div>
    <div class="col-xs-12">
      <p>{{bibliographicInfoString}}{{#if item.authors}} {{format-authors item.authors}}{{/if}}</p>
      {{#if showMetaData}}
      <table class="table">
        <tr>
          <th>{{t 'components.publicationListRow.publicationID'}}:</th><td>{{item.id}}</td>
        </tr>
        <tr>
        <th>{{t 'components.publicationListRow.publicationType'}}:</th><td>{{item.publication_type_label}}{{#if hasRefValue}}, {{item.ref_value_label}}{{/if}}

        </td>
        </tr>
        <tr>
        <th>{{t 'components.publicationListRow.publicationYear'}}:</th><td>{{item.pubyear}}</td>
        </tr>
      </table>
      {{/if}}
    </div>
  </div>
</div>
