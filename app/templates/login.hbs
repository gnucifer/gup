<div class="container">
  {{#if error}}

  {{/if}}


  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
          <form id="login-form" {{action 'authenticate' on='submit'}} role="form">
            <div class="form-group">
              <label for="identification">{{t 'login.xaccount'}}</label>
              {{input id="input-account" value=identification classBinding=":form-control :inputfield" placeholder=(t 'login.xaccountPlaceholder')}}
            </div>
            <div class="form-group">
              <label for="password">{{t 'login.password'}}</label>
              {{input id="input-password" value=password classBinding=":form-control" placeholder=(t 'login.passwordPlaceholder') type='password'}}
            </div>
            <button class="btn btn-primary btn-block" id="input-submit" type="submit">{{t 'login.button'}}</button>
          </form>
    </div>
  </div>

</div> <!-- container --> 
