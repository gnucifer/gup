<div class="selectDiv form-inline">
  <div class="checkbox">
    <label> {{t 'biblreview.showDelayedOnly'}} {{input type="checkbox" checked=only_delayed}}</label>
  </div>

{{#x-select value=pubyear class="form-control"}}
  {{#each pubyears as |selectValue|}}    
    {{#x-option value=selectValue.id}}{{selectValue.pubyear}}{{/x-option}}
  {{/each}}
{{/x-select}}

{{#x-select value=pubtype class="form-control"}}
  {{#x-option}}VÃ¤lj{{/x-option}}
  {{#each publicationsController.publicationTypes as |selectValue|}}    
    {{#x-option value=selectValue.code}}{{selectValue.name}}{{/x-option}}
  {{/each}}
{{/x-select}}

</div>

<div class="row">
  <div class="col-xs-12">
  <div class="col-xs-12 text-center">
    <strong>{{t 'text.numberOfHits'}}: {{model.meta.query.total}}</strong>
  </div>
    {{#if model.length}}
    <ul class="list-unstyled dashboard-list">
      {{#each model as |item|}}
      <li>
        {{publication-list-row item=item link='publications.show'}}
      </li>
      {{/each}}
    </ul>
    {{else}}
    {{t 'text.youHaveNoPublicationsForReview'}}
    {{/if}}
  </div>
</div>
{{pagination-pager pagination=model.meta.pagination}}
