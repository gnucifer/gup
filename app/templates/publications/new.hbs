<div class="row bottom-spacing-20">
  <div class="col-xs-12">
    {{#link-to 'publications.dashboard.drafts'}}<i class="fa fa-chevron-left"></i> Tillbaka{{/link-to}}
  </div>
</div>
<div class="row bottom-spacing-20">
  <div class="col-xs-12">
    <h1>{{t 'newPub.header'}}</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row bottom-spacing-40">
          <div class="col-xs-9">
            <h2>{{t 'newPub.importPub.header'}}</h2>
            <p>{{t 'newPub.importPub.ingress'}}</p>
          </div>
          <div class="create-icon-background" />
        </div>
        <div class="row bottom-spacing-20">
          <div class="col-xs-12 center-content">
            <form class="form-inline">
              {{
                view Ember.Select
                classNames="form-control input-lg"
                content=dataSources
                value=selectedSource
                optionValuePath="content.value"
                optionLabelPath="content.label"
                prompt=(t 'newPub.importPub.form.selectImportSourcePrompt')
              }}
              {{input class='form-control input-lg manageFields' value=sourceId placeholder=(t 'newPub.importPub.form.inputId.placeholder')}}
              <button {{action 'fetchSource'}} {{bind-attr class=":btn :btn-lg :btn-primary fetchButtonIsActive::disabled"}}>HÃ¤mta</button>
            </form>
          </div>
        </div>

        {{#if error}}
        <div class="row">
          <div class="col-xs-12">
            <div class="alert alert-danger" role="alert">{{error.error.msg}}</div>
          </div>
        </div>
        {{/if}}

        {{#if importData}}
        <div class="row">
          <div class="col-xs-12">
            <h4>{{t 'newPub.importPub.importConfirmation.header'}}</h4>
            <dl>
              <dt>{{t 'newPub.importPub.importConfirmation.title'}}</dt>
              <dd>{{importData.title}}</dd>
              <dt>{{t 'newPub.importPub.importConfirmation.author'}}</dt>
              <dd>{{importData.author}}</dd>
            </dl>
          </div>
          <div class="row">
            <div class="col-xs-12 center-content">
              <button {{action 'createPublication' importData}} class="btn btn-lg btn-success">{{t 'newPub.importPub.importConfirmation.btnImport'}}</button>
            </div>
          </div>
        </div>
        {{/if}}

      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-4">
    <div class="row">
      <div class="col-xs-12">
        <h4>{{t 'newPub.manualPub.header'}}</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8">
        <p>{{t 'newPub.manualPub.ingress'}}</p>
      </div>
      <div class="col-xs-4">
        <button class="btn btn-primary" {{action 'createPublication'}}>{{t 'newPub.manualPub.btnNew'}}</button>
      </div>
    </div>
  </div>
</div>
