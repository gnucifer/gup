



	<div class="row bottom-spacing-20">
		<div class="col-xs-6">
		  <span {{bind-attr class=":form-group errors.publication_type_id:has-error"}}>  </span>
		  <label class="control-label">Publikationstyp:</label>
		    {{view Ember.Select classNames="form-control"
		        content=publicationTypeCodes
		        value=selectedPublicationType
		        optionValuePath="content.publication_type_code"
		        optionLabelPath="content.publication_type_code"
		    }}
		</div>
		<div class="col-xs-6">
		  <label class="control-label">Innehållstyp:</label>
		  {{view Ember.Select classNames="form-control" 
				content=contentTypes
				value=selectedContentType
				optionValuePath="content.id"
				optionLabelPath="content.content_type"
		  }}
		</div>
	</div><!-- end row --> 



	<div id="title" {{bind-attr class=":row :bottom-spacing-20 getClassNameForSelectedPublicationTypeAndContentType"}}>
		<div class="col-xs-12">
			<span {{bind-attr class=":form-group errors.title:has-error"}}>
				<label class="control-label">Titel:</label>
				{{textarea rows=3 classBinding=":form-control" value=model.title}}
			</span>
		</div>
	</div> <!-- end row --> 

