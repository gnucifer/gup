	<h3>Författare</h3>
	<section id="author-component" {{bind-attr class="getClassNameForSelectedPublicationTypeAndContentType"}}>
		{{#each item in authorArr}}
			{{author-row item=item institutions=institutions removeAuthor='removeAuthorRow' isThisTheOnlyAuthorRow=isThisTheOnlyAuthorRow}}
		{{/each}}
		<div class="row bottom-spacing-20">
			<div class="col-xs-12">
				<div class="dotted-line"></div>
				<button class="btn btn-primary" {{action 'addNewAuthorRow'}}>Lägg till författare <i class="fa fa-plus"></i></button>
			</div>
		</div>

