			<div class="row bottom-spacing-20">
				<div class="col-xs-5">
					{{select2-adjusted
						zeroResult=showRegisterNewAuthor
					    content=authors
					    value=item.selectedAuthor
					    placeholder="Välj författare"
					    allowClear=true
					    typeaheadNoMatchesText="Inga resultat"
					}}
				</div>
				<div class="col-xs-5">
					{{select-2
					    content=institutions
					    value=item.selectedInstitution
					    placeholder="Välj institutioner"
					    allowClear=true
					    multiple=true
					}}
				</div>
