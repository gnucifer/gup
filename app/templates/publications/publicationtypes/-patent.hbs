<form>
<table border='1'>
	<tr>
	<td {{bind-attr class=":form-group errors.title:has-error"}}>
		<label class="control-label">Titel:<br/>
			{{input type='text' classBinding=":form-control" value=model.title}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.alt_title:has-error"}}>
		<label class="control-label">Alternativ titel:<br/>
			{{input type='text' classBinding=":form-control" value=model.alt_title}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.pubyear:has-error"}}>
		<label class="control-label">Publikationsår:<br/>
			{{input type='text' classBinding=":form-control" value=model.pubyear}}
		</label>
	</td>
	</tr>
	<tr>
	<td {{bind-attr class=":form-group errors.publanguage:has-error"}}>
		<label class="control-label">Språk:<br/>
			{{input type='text' classBinding=":form-control" value=model.publanguage}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.extid:has-error"}}>
		<label class="control-label">Externa ID:<br/>
			{{input type='text' classBinding=":form-control" value=model.extid}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.links:has-error"}}>
		<label class="control-label">Externa länkar:<br/>
			{{input type='text' classBinding=":form-control" value=model.links}}
		</label>
	</td>
	</tr>
	<tr>
	<td {{bind-attr class=":form-group errors.url:has-error"}}>
		<label class="control-label">Fulltextlänk:<br/>
			{{input type='text' classBinding=":form-control" value=model.url}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.abstract:has-error"}}>
		<label class="control-label">Sammanfattning:<br/>
			{{textarea cols='80' rows='6' classBinding=":form-control" value=model.abstract}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.category_hsv_local:has-error"}}>
		<label class="control-label">Ämne:<br/>
			{{input type='text' classBinding=":form-control" value=model.category_hsv_local}}
		</label>
	</td>
	</tr>
	<tr>
	<td {{bind-attr class=":form-group errors.keywords:has-error"}}>
		<label class="control-label">Nyckelord:<br/>
			{{input type='text' classBinding=":form-control" value=model.keywords}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.pub_notes:has-error"}}>
		<label class="control-label">Kommentar:<br/>
			{{input type='text' classBinding=":form-control" value=model.pub_notes}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.author:has-error"}}>
		<label class="control-label">Författare:<br/>
			{{input type='text' classBinding=":form-control" value=model.author}}
		</label>
	</td>
	</tr>
	<tr>
	<td {{bind-attr class=":form-group errors.patent_applicant:has-error"}}>
		<label class="control-label">Patentsökare:<br/>
			{{input type='text' classBinding=":form-control" value=model.patent_applicant}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.patent_application_number:has-error"}}>
		<label class="control-label">Ansökningsnummer:<br/>
			{{input type='text' classBinding=":form-control" value=model.patent_application_number}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.patent_application_date:has-error"}}>
		<label class="control-label">Ansökningsdatum:<br/>
			{{input type='text' classBinding=":form-control" value=model.patent_application_date}}
		</label>
	</td>
	</tr>
	<tr>
	<td {{bind-attr class=":form-group errors.patent_number:has-error"}}>
		<label class="control-label">Patentnummer:<br/>
			{{input type='text' classBinding=":form-control" value=model.patent_number}}
		</label>
	</td>
	<td {{bind-attr class=":form-group errors.patent_date:has-error"}}>
		<label class="control-label">Patentdatum:<br/>
			{{input type='text' classBinding=":form-control" value=model.patent_date}}
		</label>
	</td>
	</tr>
	<tr>
	<td  colspan='3' >
	<button {{action 'submit' model}}>Spara</button>
	</td>
	</tr>
</table>
</form>
