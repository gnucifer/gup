<h2>Välj publikationstyp</h2>
{{#if mayBecomeSelectedPublicationType}}
  <div class="row">
    <div class="col-xs-6">
      <h2>Nuvarande publikationstyp:</h2>
    </div>
    <div class="col-xs-6">
      {{publicationtype-item publicationTypes=publicationTypes code=mayBecomeSelectedPublicationType}}
    </div>
  </div>
{{/if}}
{{#if suggestedPublicationType}}
  <div class="row">
    <div class="col-xs-6">
      <h2>Föreslagen publikationstyp:</h2>
    </div>
    <div class="col-xs-6">
      {{publicationtype-item publicationTypes=publicationTypes code=suggestedPublicationType}}
    </div>
  </div>
{{/if}}
<div class="row">
  <div class="col-xs-12">
    <div class="col-xs-6">
      <h3>Bok eller kapitel i bok</h3>
      {{publicationtype-item publicationTypes=publicationTypes code='books'}}
      {{publicationtype-item publicationTypes=publicationTypes code='book-chapters'}}
      {{publicationtype-item publicationTypes=publicationTypes code='translations'}}
      {{publicationtype-item publicationTypes=publicationTypes code='edited-book'}}
    </div>
    <div class="col-xs-6">
      <h3>Artikel</h3>
      {{publicationtype-item publicationTypes=publicationTypes code='journal-articles'}}
      {{publicationtype-item publicationTypes=publicationTypes code='review-articles'}}
      {{publicationtype-item publicationTypes=publicationTypes code='editorial-letters'}}
      {{publicationtype-item publicationTypes=publicationTypes code='book-reviews'}}
      {{publicationtype-item publicationTypes=publicationTypes code='magazine-articles'}}
      {{publicationtype-item publicationTypes=publicationTypes code='newspaper-article'}}
    </div>
    <div class="col-xs-6">
      <h3>Konferensbidrag mm</h3>
      {{publicationtype-item publicationTypes=publicationTypes code='conference-papers'}}
      {{publicationtype-item publicationTypes=publicationTypes code='working-paper'}}
      {{publicationtype-item publicationTypes=publicationTypes code='poster'}}
      {{publicationtype-item publicationTypes=publicationTypes code='proceeding'}}
      {{publicationtype-item publicationTypes=publicationTypes code='other'}}
    </div>
    <div class="col-xs-6">
      <h3>Rapporter och avhandlingar</h3>
      {{publicationtype-item publicationTypes=publicationTypes code='doctoral-thesis'}}
      {{publicationtype-item publicationTypes=publicationTypes code='licentiate-thesis'}}
      {{publicationtype-item publicationTypes=publicationTypes code='reports'}}
      {{publicationtype-item publicationTypes=publicationTypes code='report-chapter'}}
    </div>
    <div class="col-xs-6">
      <h3>Övrigt</h3>
      {{publicationtype-item publicationTypes=publicationTypes code='encyclopedia-entry'}}
      {{publicationtype-item publicationTypes=publicationTypes code='journal-issue'}}
      {{publicationtype-item publicationTypes=publicationTypes code='patent'}}
      {{publicationtype-item publicationTypes=publicationTypes code='original-creative-work'}}
      {{publicationtype-item publicationTypes=publicationTypes code='curated-exhibition'}}
    </div>
  </div>
  <div class="action-links">
    {{#if mayBecomeOldSelectedPublicationType}}
      <button class="btn btn-link" {{action 'cancelChangePublicationType'}}>{{t 'edit.actions.btnCancel'}}</button>
    {{/if}}
  </div>

</div>
