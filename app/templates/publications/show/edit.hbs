<div class="row bottom-spacing-20">
  <div class="col-xs-12">
    <a href="javascript:void();" {{action 'cancel'}}><i class="fa fa-close"></i> {{t 'edit.actions.btnClose'}}</a>
  </div>
</div>

  <div class="row bottom-spacing-20">
    <div class="col-xs-12">
        <h1>{{t 'edit.header'}}</h1>
    </div>
  </div>

  <div class="row">
      <div class="publication-form col-xs-10">
          {{partial 'publications/publicationtypes/-form'}}
          {{#if actionButtonsAreVisible}}
              <div class="row">
                <div class="col-xs-12">
                  <div id="toolbar" {{bind-attr class=":btn-toolbar :pull-right getClassNameForSelectedPublicationTypeAndContentType"}}>
                    <button class='btn btn-default'  {{action 'cancel'}}>{{edit.actions.btnCancel}}</button>
                    {{#if publication.is_draft}}
                      <button class='btn btn-success'  {{action 'save' model 'draft'}}>{{edit.actions.btnSaveDraft}}</button>
                    {{/if}}
                    <button class='btn btn-primary'  {{action 'save' model }}>{{edit.actions.btnSaveAndPublish}}</button>
                  </div>
                </div>
              </div>
          {{/if}}
      </div>
      <div class="col-xs-2">
      </div>
  </div> <!-- end row --> 

